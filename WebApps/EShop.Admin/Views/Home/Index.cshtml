@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>




<style>
    body {
        background-color: #f0f4f8;
        font-family: "Noto Sans JP", sans-serif;
        box-sizing: border-box;
    }
    .login-container {
        margin: 5rem auto;
        width: 100%;
        max-width: 23rem;
        border-radius: 6px;
        background-color: #ffffff;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
        padding: 1rem;
        color: #000000;
        border-top: 5px solid #2cb1bc;
    }

    .greetings {
        text-align: center
    }

        .greetings h1 {
            color: #2cb1bc;
        }

        .greetings h2 {
            font-weight: 400;
            letter-spacing: 3px;
            font-size: 1.7rem;
            margin: 0;
        }

    input {
        background-color: #f0f4f8 !important;
    }

    .submit-btn {
        height: 35px;
        width: 100%;
        background-color: #2cb1bc;
        color: #ffffff;
        border: none;
        padding: 0.375rem 0.75rem;
        cursor: pointer;
        border-radius: 0.25rem;
        margin: 1rem 0;
        font-weight: 500;
        font-size: 1rem;
        transition: ease-in 0.25s;
    }

        .submit-btn:hover {
            background-color: #0a6c74;
        }
</style>






<form class="login-container">
    <section class="greetings mb-4">
        <h1>EShop</h1>
        <h2>Login</h2>
    </section>
    <!-- Email input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="UserInput">User</label>
        <input type="text" id="UserInput" class="form-control" />
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="PasswordInput">Password</label>
        <input type="password" id="PasswordInput" class="form-control" />
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                <label class="form-check-label" for="form2Example31"> Remember me </label>
            </div>
        </div>


    </div>

    <!-- Submit button -->
    <button type="button" id="SignInButton" class="submit-btn">Sign in</button>


</form>


<script src="~/js/Login.js"></script>

