<script src="~/js/Admin.js" asp-append-version="true"></script>

<style>
    .btn-p {
        height: 35px;
        width: auto;
        background-color: #2cb1bc;
        color: #ffffff;
        border: none;
        padding: 0.375rem 0.75rem;
        cursor: pointer;
        border-radius: 0.25rem;
        margin: 1rem 0;
        font-weight: 500;
        font-size: 1rem;
        transition: ease-in 0.25s;
    }

        .btn-p:hover {
            background-color: #0a6c74;
        }
    input {
        background-color: #f0f4f8 !important;
    }
    img {
        width: 100%;
        border: 2px solid #f5f5f5;
        border-radius: 1rem;
    }
    }
</style>

<body>
    <input type="hidden" id="productid" value="0" />
    <div class="container">
        <div class="row">
            <div class="col-sm-1">
                <button type="button" id="addButton"
                        class="btn-p"
                        onclick="addClick();">
                   Add
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table id="productTable"
                       class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Color</th>
                            <th>Category</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>



        <div class="modal" tabindex="-1" role="dialog" id="productDetailModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Product Details </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="ProductPriceDetails" class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn-p" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal" tabindex="-1" role="dialog" id="CreateProductModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">New Product</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="CreateProductBody" class="modal-body">
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="Name">
                                    Name
                                </label>
                                <input type="text" id="Name"
                                       class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="CategoryName">
                                    Product Category
                                </label>
                                <input type="text" id="CategoryName"
                                       class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Color">
                                    Color
                                </label>
                                <input type="text" id="Color"
                                       class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Description">
                                    Description
                                </label>
                                <input type="text" id="Description"
                                       class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="ActualCost">
                                    ActualCost
                                </label>
                                <input type="number" id="ActualCost"
                                       class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Price">
                                    Price
                                </label>
                                <input type="number" id="Price"
                                       class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">ImageUrl</label>
                                <input type="url" id="ImageUrl"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                        <button type="button" onclick="productAdd();" class="btn-p" data-dismiss="modal">Create</button>

                    </div>
                </div>
            </div>
        </div>
    </div>

  </body>
